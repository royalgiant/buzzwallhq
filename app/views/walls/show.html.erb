<div class="container mx-auto mt-5">
  <h2 class="text-4xl font-bold tracking-tight text-gray-900 text-center"><%= @wall.name %></h2>

  <% if current_user.present? && @wall.user_id == current_user.id %>
    <div class="mt-4 text-center">
      <h3 class="text-2xl font-semibold">Embed this Wall</h3>
      <p class="mt-2 text-gray-600">Copy the code below to embed this wall on your own website:</p>
      <input type="text" class="block w-full rounded-md border border-gray-400 py-2 pl-3 text-gray-900 shadow ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" value='<iframe src="<%= embed_wall_url(@wall.embed_token) %>" width="1400" height="720" frameborder="0" allowfullscreen></iframe>' readonly>
    </div>
  <% end %>

  <% if @is_subscriber %>
    <%= render partial: '4_column_show_grid' %>
  <% else %>
    <%= render partial: '3_column_show_grid' %>
  <% end %>
</div>
      