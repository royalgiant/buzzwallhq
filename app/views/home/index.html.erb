<div class="flex h-full flex-col expansion-alids-init">

<header class="py-10">
  <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="relative z-50 flex justify-between">
      <div class="flex items-center md:gap-x-12">
        <%= link_to root_path, aria: { label: "Home" } do %>
          <div class="flex-auto lg:col-start-6 lg:row-start-1 xl:col-span-8 xl:col-start-5 font-bold text-2xl">
            BuzzWallHQ
            <sub class="font-medium text-sm ml-1">Beta</sub>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</header>

<% if @landing == "reviews" %>
  <%= render partial: 'hero_review_features' %>
<% else %>
  <%= render partial: 'hero_viral_features' %>
<% end %>

<section id="pricing" aria-label="Pricing" class="bg-gray-900 py-20 sm:py-32">
  <div class="md:text-center px-3 sm:px-6 lg:px-8">
    <h2 class="font-display text-3xl tracking-tight text-white sm:text-4xl">
      Simple pricing, no subscriptions for early adopters.
    </h2>
    <p class="mt-4 text-lg text-gray-500">
      üéÅ All plans are currently 30% off for the first 50 customers 
    </p>
  </div>
   <div class="container mt-16 grid grid-cols-1 gap-y-10 sm:mx-auto lg:-mx-8 lg:max-w-7xl lg:grid-cols-4 xl:mx-auto xl:gap-x-8">
        <%= render 'plan', name: "FREE FOREVER", price: "FREE", price_id: ENV['STARTER_PRICE'],
          description: "For those who want to try out BuzzwallHQ before committing.",
          features: [
            '1 Buzz Wall',
            '9 Approved Reviews',
            'BuzzwallHQ branded wall',
            '2 keyword tracked monthly',
            'Supports Tiktok',
            'Email Alerts',
          ],
          xfeatures: [
            'Supports Instagram',
            'Basic Reviews Tracking',
            'Supports Youtube',
          ],
          product: "FREE",
          featured: false %>

        <%= render 'plan', name: "Starter", price: "$129", price_id: ENV['STARTER_PRICE'],
          description: "For the individual who is just getting started.",
          features: [
            'Unlimited Buzz Walls',
            'Unlimited Approved Reviews',
            'No BuzzwallHQ branding',
            '10 keyword tracked monthly',
            'Supports Tiktok',
            'Email Alerts',
          ],
          xfeatures: [
            'Supports Instagram',
            'Basic Reviews Tracking',
            'Supports Youtube',
          ],
          product: :starter_price,
          featured: false %>
      
      <%= render 'plan', name: "Launch", price: "$199", price_id: ENV['LAUNCH_PRICE'],
          description: "Perfect for startups, small, and medium sized businesses.",
          features: [
            'Unlimited Buzz Walls',
            'Unlimited Approved Reviews',
            'No BuzzwallHQ branding',
            '50 keywords tracked weekly',
            'Supports Tiktok',
            'Email Alerts',
            'Supports Instagram',
            'Basic Reviews Tracking',
          ],
          xfeatures: [
            'Supports Youtube',
          ],
          product: :launch_price,
          featured: true %>
      
      <%= render 'plan', name: "Grow", price: "$249", price_id: ENV['GROW_PRICE'],
          description: "For the biggest companies with multiple products and services.",
          features: [
            'Unlimited Buzz Walls',
            'Unlimited Approved Reviews',
            'No BuzzwallHQ branding',
            '100 keywords tracked daily',
            'Supports Tiktok',
            'Email Alerts',
            'Supports Instagram',
            'Advanced Reviews Tracking',
            'Supports Youtube',
          ],
          xfeatures: [],
          product: :growth_price,
          featured: false %>
  </div>
</section>

<div class="relative mx-auto px-4 sm:px-6 lg:px-8" style="background-image: url('<%= asset_path('background-faqs.jpg') %>');">
  <section id="faq" aria-labelledby="faq-title" className="relative overflow-hidden bg-gray-50 py-20 sm:py-32">
      <div class="container mx-auto lg:max-w-7xl">
        <div class="py-32">
          <h2 id="faq-title" class="font-display text-3xl tracking-tight text-gray-900 sm:text-5xl"
          >
            Frequently asked questions
          </h2>
          <p class="mt-4 text-xl font-light tracking-tight text-gray-700">
            If you can't find what you're looking for, email our support team
            and if you're lucky someone will get back to you.
          </p>

          <dl class=" container mt-10 space-y-6 divide-y divide-gray-900/10">
            <% @faqs.each_with_index do |faq, index| %>
              <div class="pt-6">
                <dt>
                  <button type="button" class="flex w-full items-start justify-between text-left text-gray-900" aria-controls="faq-<%= index %>" aria-expanded="false">
                    <span class="text-base font-semibold leading-7"><%= faq[:question] %></span>
                    <span class="ml-6 flex h-7 items-center">
                      <svg class="h-6 w-6 plus-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
                      </svg>
                      <svg class="hidden h-6 w-6 minus-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
                      </svg>
                    </span>
                  </button>
                </dt>
                <dd class="mt-2 pr-12 hidden" id="faq-<%= index %>">
                  <p class="text-base leading-7 text-gray-600"><%= faq[:answer] %></p>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
  </section>

  <section id="platforms" aria-label="What our customers are saying" class="bg-gray-50 py-20 sm:py-32">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl md:text-center">
        <h2 class="font-display text-3xl tracking-tight text-gray-900 sm:text-6xl">
          Supports Multiple Platforms
        </h2>
      </div>
      <div class="mt-12 mb-32 flex justify-center space-x-8">
        <div class="flex justify-center">
          <%= image_tag "tiktok.png", class: "h-24 w-24 mr-12 object-cover", alt: "TikTok Logo", width: 800, height: 56 %>
          <%= image_tag "instagram.png", class: "h-24 w-24 mr-12 object-cover", alt: "Instagram Logo", width: 800, height: 56 %>
          <%= image_tag "youtube.png", class: "h-24 w-24 object-cover", alt: "YouTube Logo", width: 800, height: 56 %>
        </div>
      </div>
      <h4 class="mx-auto max-w-4xl font-display text-3xl font-medium tracking-tight text-gray-900 sm:text-5xl text-center">
        Get started with BuzzwallHQ
        <span class="relative whitespace-nowrap text-indigo-600">
          today
        </span>
      </h4>
      <div class="mt-10 flex justify-center gap-x-6">
        <%= link_to "Get Started Today", "#pricing", class: "rounded-full bg-black px-4 py-4 text-md font-semibold text-white shadow-sm hover:bg-gray-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    </div>
  </section>

  <footer class="bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-16">
        <nav class="mt-10 text-md" aria-label="quick links">
          <div class="-my-1 flex justify-center gap-x-6">
            <%= link_to "Features", "#features", class: "text-gray-700 hover:text-gray-900" %>
            <%= link_to "Pricing", "#pricing", class: "text-gray-700 hover:text-gray-900" %>
            <%= link_to "FAQ", "#faq", class: "text-gray-700 hover:text-gray-900" %>
            <%= link_to "Terms & Conditions", terms_path, class: "text-gray-700 hover:text-gray-900" %>
            <%= link_to "Privacy Policy", privacy_path, class: "text-gray-700 hover:text-gray-900" %>
          </div>
        </nav>
      </div>
      <div class="flex flex-col items-center border-t border-gray-400/10 py-10 sm:flex-row-reverse sm:justify-between">
        <div class="flex gap-x-6">
          <%= link_to "https://x.com/donaldklee", class: "group", aria_label: "BuzzwallHQ on X", target: "_blank", rel: "noopener noreferrer" do %>
            <svg
              class="h-6 w-6 fill-gray-500 group-hover:fill-gray-700"
              aria-hidden="true"
              viewBox="0 0 24 24"
            >
              <path d="M13.3174 10.7749L19.1457 4H17.7646L12.7039 9.88256L8.66193 4H4L10.1122 12.8955L4 20H5.38119L10.7254 13.7878L14.994 20H19.656L13.3171 10.7749H13.3174ZM11.4257 12.9738L10.8064 12.0881L5.87886 5.03974H8.00029L11.9769 10.728L12.5962 11.6137L17.7652 19.0075H15.6438L11.4257 12.9742V12.9738Z" />
            </svg>
          <% end %>
        </div>
        <p class="mt-6 text-sm text-gray-500 sm:mt-0">
          Copyright &copy; <%= Time.current.year %> BuzzwallHQ. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</div>

<script>
  $(document).ready(function() {
    $('dl button').on('click', function() {
      var $button = $(this);
      var $dd = $button.closest('dt').next('dd');
      var isExpanded = $button.attr('aria-expanded') === 'true';

      // Toggle the visibility of the answer
      $dd.toggleClass('hidden');

      // Toggle the aria-expanded attribute
      $button.attr('aria-expanded', !isExpanded);

      // Toggle the plus/minus icons
      $button.find('.plus-icon, .minus-icon').toggleClass('hidden');
    });
  });
</script>