<%= form_with(model: buzz_term, class: "contents") do |form| %>
  <% if buzz_term.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(buzz_term.errors.count, "error") %> prohibited this buzz_term from being saved:</h2>

      <ul>
        <% buzz_term.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :term, class: "text-sm font-medium leading-6 text-gray-900 block" %>
    <%= form.text_field :term, class: "block w-full rounded-md border border-gray-400 py-2 pl-3 text-gray-900 shadow ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  </div>

  <div class="inline">
    <%= form.submit @buzz_term.new_record? ? "Create Buzz Term" : "Update Buzz Term", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer rounded hover:bg-blue-700" %>
  </div>
<% end %>
