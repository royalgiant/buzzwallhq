<% if flash[:success].present? %>
  <p class="alert alert-success"><%= flash[:success] %></p>
<% end %>
<% if notice.present? && flash[:notice].present? %>
  <p class="alert alert-warning"><%= notice %></p>
<% end %>
<% if alert.present?  && flash[:alert].present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>